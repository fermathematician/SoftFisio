<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AvaliacaoTabViewController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="novaAvaliacaoButton" mnemonicParsing="false" onAction="#handleNovaAvaliacao" styleClass="primary-button" text="+Nova Avaliação" />
               </children>
            </HBox>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
               <content>
                  <VBox fx:id="avaliacoesVBox" spacing="15.0" />
               </content>
            </ScrollPane>
            <Label fx:id="emptyAvaliacoesLabel" alignment="CENTER" styleClass="empty-list-label" text="Este paciente ainda não possui nenhuma avaliação." textAlignment="CENTER" visible="false" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>