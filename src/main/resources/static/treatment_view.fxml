<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.DatePicker?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import javafx.scene.layout.Region?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="root" stylesheets="@css/treatment-view.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TreatmentViewController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="20.0">
            <children>
               <HBox alignment="CENTER_LEFT">
                  <children>
                     <Label styleClass="section-title" text="Sessões Anteriores" />
                     <Region HBox.hgrow="ALWAYS" />
                     <Button fx:id="novaSessaoButton" onAction="#handleNovaSessao" mnemonicParsing="false" styleClass="primary-button" text="+ Nova Sessão" />
                  </children>
               </HBox>
               
                     <StackPane>
                        <children>
                           <Label fx:id="emptySessionsLabel" styleClass="empty-message-label" text="Não há sessões cadastradas para este paciente." managed="false" visible="false" StackPane.alignment="CENTER" />
                           <VBox fx:id="sessionsVBox" spacing="20.0" />
                        </children>
                        <VBox.margin>
                           <Insets top="30.0" />
                        </VBox.margin>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="25.0" left="40.0" right="40.0" top="25.0" />
               </padding>
      </VBox>
   </content>
</ScrollPane>
