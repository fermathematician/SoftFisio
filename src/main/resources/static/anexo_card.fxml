<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="cardRoot" prefHeight="200.0" prefWidth="200.0" styleClass="anexo-card" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AnexoCardController">
   <children>
      <VBox alignment="CENTER" spacing="10.0" styleClass="anexo-content">
         <children>
            <ImageView fx:id="thumbnailImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="descriptionLabel" text="Descrição do Anexo" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      
      <Region fx:id="deleteIcon" onMouseClicked="#handleDeleteAnexo" styleClass="delete-icon" StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets right="10.0" top="10.0" />
         </StackPane.margin>
      </Region>
   </children>
</StackPane>